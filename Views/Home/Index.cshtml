@model IEnumerable<Product>
@{ Layout = "_Layout"; ViewBag.Title = "All Products";}

<h2>All Productss</h2>
<a asp-action="AddProduct" class="btn btn-sm btn-primary">Add Product</a>
<a asp-action="GetProduct" class="btn btn-sm btn-secondary">Get Product</a>
<a asp-action="AddFile" class="btn btn-sm btn-secondary">Add XML File</a>

<table class="table table-sm table-striped table-bordered m-2">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Description</th>
            <th>Date Of Production</th>
            <th>Expiration Date</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Update</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model)
        {
        <tr>
            <td>@r.Id</td>
            <td>@r.Name</td>
            <td>@r.Description</td>
            <td>@r.DateOfProduction</td>
            <td>@r.ExpirationDate</td>
            <td>@r.Price</td>
            <td>@r.Quantity</td>


            <td>
                <a asp-action="UpdateProductPatch" asp-route-id="@r.Id">
                    <img src="/icon/edit.png" />
                </a>
            </td>
            <td>
                <form asp-action="DeleteProduct" method="post">
                    <input type="hidden" value="@r.Id" name="ProductId" />
                    <input type="image" src="/icon/close.png" />
                </form>
            </td>
        </tr>
        }
    </tbody>
</table>