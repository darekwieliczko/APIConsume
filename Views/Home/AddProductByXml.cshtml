@model Product
@{ Layout = "_Layout"; ViewBag.Title = "Add a Product by XML";}

<h2>Add a Product by XML <a asp-action="Index" class="btn btn-sm btn-secondary">Back</a></h2>
<form asp-action="AddProductByXml" method="post">
    <div class="form-group">
        <label for="Name">Name:</label>
        <input class="form-control" name="Name" />
    </div>
    <div class="form-group">
        <label for="Description">Description:</label>
        <input class="form-control" name="Description" />
    </div>
    <div class="form-group">
        <label for="ExpirationDate">Expiration Date:</label>
        <input class="form-control" name="ExpirationDate" />
    </div>

    <div class="form-group">
        <label for="DateOfProduction">Date Of Production:</label>
        <input class="form-control" name="DateOfProduction" />
    </div>
    <div class="form-group">
        <label for="Price">Price:</label>
        <input class="form-control" name="Price" />
    </div>
    <div class="form-group">
        <label for="Quantity">Quantity:</label>
        <input class="form-control" name="Quantity" />
    </div>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Add</button>
    </div>
</form>

<h3 class="alert">@ViewBag.Result</h3>

@if (Model != null)
{
<h2>Product</h2>
    <table class="table table-sm table-striped table-bordered m-2">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <td>Description</td>
                <th>ExpirationDate</th>
                <th>DateOfProduction</th>
                <th>Price</th>
                <th>Quantity</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.Id</td>
                <td>@Model.Name</td>
                <td>@Model.Description</td>
                <td>@Model.ExpirationDate</td>
                <td>@Model.DateOfProduction</td>
                <td>@Model.Price</td>
                <td>@Model.Quantity</td>
            </tr>
        </tbody>
    </table>
}